<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Client.Maui.Pages.SignInPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Client.Maui.ViewModels"
    Title="SignInPage"
    x:DataType="vm:SignInPageViewModel">
    <VerticalStackLayout>
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password" Text="{Binding Password}" />
        <Button Command="{Binding SignInCommand}" Text="Sign Up" />
    </VerticalStackLayout>
</ContentPage>